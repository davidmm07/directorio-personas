<p id="notice"><%= notice %></p>

<h1>Directorio de Personas</h1>

<table>
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Telefonos</th>
      <th>Email</th>
      <th>Tipo de Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nombres %></td>
        <td><%= user.apellidos %></td>
        <td><%= user.telefonos %></td>
        <td><%= user.email %></td>
        <td><%= user.usertype_id %></td>
        <td><%= link_to 'Mostrar', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Esta seguro de borrar el usuario?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

